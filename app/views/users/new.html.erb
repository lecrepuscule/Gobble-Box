<h1>User Sign Up</h1>

<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :gender %>
  <%= f.text_field :gender %>

  <%= f.label :weight %>
  <%= f.number_field :weight %>

  <%= f.label :height %>
  <%= f.number_field :height %>

  <%= f.submit value: "Sign Up" %>

<% end %>